{% extends 'base.html.twig' %}
{% set hide_header = true %}

{% block title %}Connexion — Aura{% endblock %}

{% block body %}
    <section class="auth-section">
        <div class="auth-bg" style="background-image:url('{{ asset('images/login.jpg') }}')"></div>

        <div class="auth-container">
            <img class="auth-logo" src="{{ asset('images/logo.png') }}" alt="Aura">
            <div class="auth-card">
                <h1 class="auth-title">Connexion</h1>

                {% if error %}
                    <div class="alert error">Invalid CSRF token.</div>
                {% endif %}

                <form method="post" class="auth-form">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <label>Email</label>
                    <input type="email" name="email" value="{{ last_username }}" required autocomplete="email">

                    <label>Mot de passe</label>
                    <input type="password" name="password" required autocomplete="current-password">

                    <button class="btn primary full">Se connecter</button>
                </form>

                <div class="auth-meta">
                    Pas encore de compte ? <a href="{{ path('app_register') }}"><strong>Créer un compte</strong></a>
                </div>
                <a href="{{ path('app_home') }}" class="auth-back">← Revenir à l’accueil</a>
            </div>
        </div>
    </section>
{% endblock %}

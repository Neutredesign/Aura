<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <title>{% block title %}Aura{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;600;700&family=Playfair+Display:wght@600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% block styles %}{% endblock %}
</head>
<body>

{# HEADER GLOBAL — affiché sauf sur la home #}
{% if hide_header is not defined or not hide_header %}
    <header class="site-header {{ hero_header is defined and hero_header ? 'header-hero' : '' }}">
        <div class="header-inner">
            <a class="brand" href="{{ path('app_home') }}" aria-label="Accueil Aura">
                {% if hero_header is defined and hero_header %}
                    <img class="logo" src="{{ asset('images/logoblanc.png') }}" alt="Aura">
                {% else %}
                    <img class="logo" src="{{ asset('images/logo.png') }}" alt="Aura">
                {% endif %}
            </a>

            <nav class="site-nav" aria-label="Navigation principale">
                {% if app.user %}
                    <a href="{{ path('app_dressing') }}">Dressing</a>
                    <a href="{{ path('app_outfit_index') }}">Tenues</a>
                    <a href="{{ path('app_profile') }}">Profil</a>
                {% else %}
                    <a href="{{ path('app_home') }}">Accueil</a>
                    <a href="{{ path('app_login') }}" class="btn-small">Connexion</a>
                    <a href="{{ path('app_register') }}" class="btn-small">Créer un compte</a>
                {% endif %}
            </nav>
        </div>
    </header>
{% endif %}

{% block body %}{% endblock %}

<footer class="footer">
    © {{ "now"|date("Y") }} Aura — Plus qu’un look, une aura.
</footer>

{% block scripts %}{% endblock %}
</body>
</html>

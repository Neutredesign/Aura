{% extends 'base.html.twig' %}
{% block title %}Changer le mot de passe{% endblock %}

{% block body %}
    <h1>Modifier le mot de passe</h1>

    {% for label, messages in app.flashes %}
        {% for msg in messages %}
            <div style="margin: 10px 0; padding: 8px; border-radius: 6px;
                background-color: {{ label == 'error' ? '#fdd' : '#dfd' }};
                color: {{ label == 'error' ? '#900' : '#060' }};">
                {{ msg }}
            </div>
        {% endfor %}
    {% endfor %}

    <form method="post" style="max-width:400px; display:flex; flex-direction:column; gap:1rem;">
        <label>
            Ancien mot de passe :
            <input type="password" name="old_password" required>
        </label>

        <label>
            Nouveau mot de passe :
            <input type="password" name="new_password" minlength="8" required>
        </label>

        <label>
            Confirmer le mot de passe :
            <input type="password" name="confirm_password" minlength="8" required>
        </label>

        <button type="submit" style="padding:.5rem 1rem;">Mettre Ã  jour</button>
    </form>
{% endblock %}
